
   
<div class="create-div">
<body class="text-center">   
<main class="form-create">
<form method="POST" action="/recipe/{{_id}}/edit">
<div class="form-recipe">
  <div><label for="recipeName">Name</label>
    <input name="name" value="{{name}}" id="recipeName" type="text" /></div>
    <br>
  <div><label for="recipeImage">Photo</label>
    <input name="imageUrl" value="{{imageUrl}}" id="recipeImage" type="text" /></div>
     <br>
  <div><label for="recipeDesription">Description</label>
    <input name="description" value="{{description}}" id="recipeDescription" type="text" /></div>
     <br>
  <div><label for="recipePrepTime">Prep Time</label>
    <input
      name="prepTime"
      id="recipePrepTime"
      type="number"
      min="1"
      max="480"
          value="{{prepTime}}"
    /></div>
     <br>
  <div><label for="recipeCookTime">Cook Time</label>
    <input
      name="cookTime"
      id="recipeCookTime"
      type="number"
      min="1"
      max="480"

        value="{{cookTime}}"
    /></div>
     <br>
  <div><label for="recipeIngredients">Ingredients</label>
    <input name="ingredients" value="{{ingredients}}" id="recipeIngredients" type="text" /></div>
     <br>
  <div><label for="recipeInstructions">Instructions</label>
    <input name="instructions" value="{{instructions}}" id="recipeInstructions" type="text" /></div>
     <br>
    <button type="submit">Save</button>
    </div>
</form>
</main>

{{#if errorMessage}}
   {{errorMessage}}
{{/if}}
    </div>

